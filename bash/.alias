# ls coloring
export LS_OPTIONS='--color=auto'
export CLICOLOR='Yes'

# search
alias nak='nak -c'

# navigation
alias ..='cd ..'
alias ...='cd ../../..'
alias ....='cd ../../../..'
alias .....='cd ../../../../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
alias .5='cd ../../../../..'
alias c='clear'
alias e='exit'

# vi in the command line
set -o vi

# top
alias cpu='top -o cpu'
alias mem='top -o rsize'

# get your current public ip
alias ip="curl icanhazip.com"

# interactive prompts to dangarous commands
alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"

# git
alias gd="git diff"
alias gdl="git diff ^HEAD ^HEAD~1"
alias ga="git add"
alias gbd="git branch -D"
alias gst="git status"
alias gc="git commit -m"
alias gci="git commit"
alias wtc="whatthecommit --no-disclaimer"
function gciw() {
  gci "`whatthecommit --no-disclaimer`"
}
alias gca="git commit -a -m"
alias gm="git merge"
alias gf="git fetch"
alias gpt="git push --tags"
alias gp="git push"
alias gr="git reset"
alias grh="git reset --hard"
alias gb="git branch"
alias gcob="git checkout -b"
alias gco="git checkout"
alias gba="git branch -a"
alias gcp="git cherry-pick"
alias gl="git log --pretty='format:%Cgreen%h%Creset %an - %s' --graph"
alias gpom="git fetch && git rebase origin/master"
alias gcd='cd "`git rev-parse --show-toplevel`"'
alias gsum="git summary"
alias ge="git effort"
alias gs="git stash"
alias gsl="git stash list"
alias gsp="git stash pop"
alias gcom="git checkout master"

# copy url to clipboard
alias url="grep -ioE 'https?://[^[:space:]]+' | tail -1 | pbcopy"

# copy the url that `arc diff` spits out
function arcd() {
  arc diff | tee ~/.arcoutput.log
  cat ~/.arcoutput.log | url
}

