{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "indent": [ "error", 2, { "SwitchCase": 1 } ],
        "no-console": [ "off", { "allow": ["warn", "error"] } ],
        "linebreak-style": [ "error", "unix" ],
        "quotes": [ "error", "single", {
            "avoidEscape": true,
            "allowTemplateLiterals": true
        }],
        "semi": [ "error", "always" ],
        "valid-jsdoc": [ "off", {
            "preferType": {
                "boolean": "Boolean",
                "number": "Number",
                "ojbect": "Object",
                "string": "String",
                "array": "Array",
                "function": "Function"
            },
            "requireReturn": false,
            "requireParamDescription": false,
            "requireReturnDescription": false
        }],
        "no-control-regex": ["off"]
    }
}